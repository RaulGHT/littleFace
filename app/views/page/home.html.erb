<%= render "layouts/navbar" %>
<div class="container" style="position: fixed; width: 100%; min-height: 80px;">
	<div class="panel-corners panel-default transparent" style="margin:0px">
		<h1>My Posts:</small></h1>
	</div>
</div>
<div class="container">
	<div class="panel-corners panel-default transparent" style="margin-top:100px">
		<div id="my-posts" class="main_panel">
			<%= render @posts %>
		</div>
		<div id="infinite-scrolling">
			<%= will_paginate @posts %>
		</div>
		<div id="load-ico">
			<img class="displayed" src="/images/ajax-loader.gif" alt="Loading..." title="Loading..." />
		</div>
	</div>
</div>
