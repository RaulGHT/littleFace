<!-- Sidebar -->
<div id="sidebar-wrapper" style="overflow-x: hidden; bottom: 0">
    <div class="sidebar-nav" style="padding-left: 5px; padding-top:60px; height: 100%;">
        <div class="sidebar-brand"><h3 class="brand-header">Recent:</h3></div>
		<div ng-controller="accordion" style="padding-right: 15px">
			<uib-accordion >
				<uib-accordion-group ng-repeat="month in data" is-open="status.open" ng-init="status.open = isOpen(month)" is-disabled="isDisabled(month)">
					<uib-accordion-heading>
        				<strong>{{month.label | capitalize}}</strong><i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}"></i>
      				</uib-accordion-heading>
					<ul>
						<li class="item" ng-repeat="item in month.posts">
							<a href="{{'#p-' + (item.id)}}" class="itemLink" will-scroll>{{item.title | capitalize}}</a>
						</li>
					</ul>
				</uib-accordion-group>
	    	</uib-accordion>
		</div>
    </div>
</div>
<!-- /#sidebar-wrapper -->
